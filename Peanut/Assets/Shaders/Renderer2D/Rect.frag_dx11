struct FSInput
{
    float4 Position              : SV_Position;
    float2 TexCoord              : TexCoord;
    float4 Color                 : Color;
    nointerpolation int TexIndex : TexIndex;
};

float4 main(FSInput Input) : SV_Target
{
    float4 color;

    if (Input.TexIndex < 0) {
        color = Input.Color;
    } else {
        // TODO: Textures
        color = float4(0.5, 0.5, 0.5, 1.0);
    }

    return color;
}